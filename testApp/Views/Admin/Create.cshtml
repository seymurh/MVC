@model testApp.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_BlogBaseLayout.cshtml";
}

<h2>Create</h2>

<form action="@Url.Action("Create", "Admin")" class="form" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User User</legend>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label" })
            <input type="text" name="Name" id="Name" class="form-control" />
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Surname, new { @class = "control-label" })

            <input type="text" name="Surname" id="Surname" class="form-control" />
            @Html.ValidationMessageFor(model => model.Surname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label" })
            <input type="text" name="Email" id="Email" class="form-control" />

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            <input type="password" name="Password" id="Password" class="form-control" />
        </div>
        <div class="form-group">
            <label for="retype">Retype Password</label>
            <input id="retype" type="password" class="form-control" />
        </div>
        <div class="form-group">
            <label>Profile Image</label>
            <input type="file" name="ProfileImageUrl" />
        </div>

        <p>
            <input id="submit" class="btn btn-success" type="submit" disabled="disabled" value="Create" />
        </p>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function areEqual(elem1, id) {
            var elem2 = document.getElementById(id);
            var submit = document.getElementById('submit');
            if (elem1.value == elem2.value) {
                submit.removeAttribute('disabled');
            } else {
                submit.setAttribute('disabled', 'disabled');
            }
        }
        $(document).ready(function () {
            var password = document.getElementById('Password');
            var retype = document.getElementById('retype');
            // password.addEventListener('change', function () { areEqual(this, 'retype'); });
            password.onkeyup = function () { areEqual(this, 'retype'); };
            //retype.onchange = function () { areEqual(this, 'Password'); };
            retype.onkeyup = function () { areEqual(this, 'Password'); };
        });
    </script>
}
