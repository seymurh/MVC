@model IEnumerable<testApp.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BlogLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
           
            @Html.ActionLink("Edit", "Edit", new { }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", new { }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
