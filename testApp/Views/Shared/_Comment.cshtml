@model List<Comment>

@foreach (Comment item in Model)
{
    <tr>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
            {
                <img src="@item.ImageUrl" style="max-width:100px;max-height:100px;" />
            }
        </td>
        <td>
            @item.Content
        </td>
        <td>
            @Html.ActionLink("Rəyi sil", "DeleteComment", new { id = item.Id })
            @Html.ActionLink("Update Comment","UpdateComment",new {id=item.Id})
            @Html.ActionLink("Download Image", "DownloadCommentImage", new { id = item.Id })
        </td>


    </tr>
}